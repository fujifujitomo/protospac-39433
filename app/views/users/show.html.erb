<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@name}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @name %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= "#{@name}のプロフィール" %></td>
          </tr>
          <tr>
            <th class="table__col1">所属</th>
            <td class="table__col2"><%= "#{@name}の所属" %></td>
          </tr>
          <tr>
            <th class="table__col1">役職</th>
            <td class="table__col2"><%= "#{@name}の役職" %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@name}さんのプロトタイプ"%>
      </h2>

      <div class="user__card">

        <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
        <% @prototypes.each do |prototype| %>
         <div class="card">

        <%= link_to image_tag(url_for(prototype.image)), prototype_path(prototype), class: "card__img" %>
      
        <h1 class="card__title">
          <%= link_to prototype.title, prototype_path(prototype.id) %>
        </h1>
      
        <p class="card__summary">
          <%= prototype.catch_copy %>
        </p>

        <p class="card__user">
          <%= link_to prototype.user.name, user_path(prototype.user) %>
        </p>

    </div>
  <% end %>










      </div>
    </div>
  </div>
</div>